<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>seraphim-client</artifactId>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <configuration>
          <createDependencyReducedPom>false</createDependencyReducedPom>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
        <version>3.2.4</version>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- Skylla client -->
    <dependency>
      <artifactId>skylla-client</artifactId>
      <groupId>de.d3adspace.skylla</groupId>
      <scope>compile</scope>
      <version>1.0.0</version>
    </dependency>

    <!-- Hawkings -->
    <dependency>
      <artifactId>hawkings</artifactId>
      <groupId>de.d3adspace</groupId>
      <scope>compile</scope>
      <version>1.1.0</version>
    </dependency>

    <!-- Seraphim Commons -->
    <dependency>
      <artifactId>seraphim-commons</artifactId>
      <groupId>de.d3adspace.seraphim</groupId>
      <scope>compile</scope>
      <version>1.0.0</version>
    </dependency>
  </dependencies>
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>seraphim-parent</artifactId>
    <groupId>de.d3adspace.seraphim</groupId>
    <version>2.0.0</version>
  </parent>

  <version>1.0.0</version>

</project>
